{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES5",
		"inlineSourceMap": true,
		"inlineSources": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"removeComments": true,
		"outDir": "bin",
		"newLine": "lf",
		"sourceRoot": ".",
		"baseUrl": ".",
		"noUnusedParameters": true,
		"noUnusedLocals": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}

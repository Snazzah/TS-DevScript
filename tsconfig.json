{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"inlineSourceMap": true,
		"inlineSources": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"removeComments": true,
		"outDir": "bin",
		"sourceRoot": "src",
		"baseUrl": ".",
		"noUnusedParameters": true,
		"noUnusedLocals": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}

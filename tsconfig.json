{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "inlineSourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "outDir": "bin",
    "sourceRoot": "src",
    "baseUrl": ".",
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
